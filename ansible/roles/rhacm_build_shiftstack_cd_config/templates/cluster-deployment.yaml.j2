---
apiVersion: v1
kind: Namespace
metadata:
  name: "{{ rhacm_clusterdeployment_name }}"
---
apiVersion: hive.openshift.io/v1
kind: ClusterDeployment
metadata:
  name: "{{ rhacm_clusterdeployment_name }}"
  namespace: "{{ rhacm_clusterdeployment_name }}"
  labels:
    cloud: OpenStack
    region: regionOne
    vendor: OpenShift
spec:
  baseDomain: "{{ rhacm_clusterdeploy_base_domain }}"
  clusterName: "{{ rhacm_clusterdeployment_name }}"
  controlPlaneConfig:
    servingCertificates: {}
  installed: false
  platform:
    openstack:
      cloud: overcloud
      credentialsSecretRef:
        name: "{{ rhacm_clusterdeployment_name }}-creds"
  provisioning:
    installConfigSecretRef:
      name: "{{ rhacm_clusterdeployment_name }}-install-config"
    sshPrivateKeySecretRef:
      name: "{{ rhacm_clusterdeployment_name }}-ssh-private-key"
    imageSetRef:
      name: "{{ rhacm_clusterdeploy_cis }}"
  pullSecretRef:
    name: "{{ rhacm_clusterdeployment_name }}-pull-secret"
---
apiVersion: cluster.open-cluster-management.io/v1
kind: ManagedCluster
metadata:
  labels:
    cloud: OpenStack
    region: regionOne
    name: "{{ rhacm_clusterdeployment_name }}"
    vendor: OpenShift
  name: "{{ rhacm_clusterdeployment_name }}"
spec:
  hubAcceptsClient: true
---
apiVersion: hive.openshift.io/v1
kind: MachinePool
metadata:
  name: "{{ rhacm_clusterdeployment_name }}-worker"
  namespace: "{{ rhacm_clusterdeployment_name }}"
spec:
  clusterDeploymentRef:
    name: "{{ rhacm_clusterdeployment_name }}"
  name: worker
  platform:
    openstack:
      flavor: "{{ rhacm_clusterdeploy_worker_flavor }}"
  replicas: 0
---
apiVersion: v1
kind: Secret
metadata:
  name: "{{ rhacm_clusterdeployment_name }}-pull-secret"
  namespace: "{{ rhacm_clusterdeployment_name }}"
data:
  .dockerconfigjson: "{{ clusterdeployment_pull_secret }}"
type: kubernetes.io/dockerconfigjson
---
apiVersion: v1
kind: Secret
metadata:
  name: "{{ rhacm_clusterdeployment_name }}-ssh-private-key"
  namespace: "{{ rhacm_clusterdeployment_name }}"
data:
  ssh-privatekey: "{{ ssh_pri_key_content['content'] }}"
type: Opaque
---
apiVersion: v1
kind: Secret
metadata:
  name: "{{ rhacm_clusterdeployment_name }}-install-config"
  namespace: "{{ rhacm_clusterdeployment_name }}"
type: Opaque
data:
  install-config.yaml: "{{ lookup('template', './install-config.yaml.j2') | b64encode }}"
---
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: "{{ rhacm_clusterdeployment_name }}-creds"
  namespace: "{{ rhacm_clusterdeployment_name }}"
data:
  clouds.yaml: "{{ lookup('template', './clouds.yaml.j2') | b64encode }}"
---
apiVersion: agent.open-cluster-management.io/v1
kind: KlusterletAddonConfig
metadata:
  name: "{{ rhacm_clusterdeployment_name }}"
  namespace: "{{ rhacm_clusterdeployment_name }}"
spec:
  clusterName: "{{ rhacm_clusterdeployment_name }}"
  clusterNamespace: "{{ rhacm_clusterdeployment_name }}"
  clusterLabels:
    cloud: OpenStack
    vendor: OpenShift
  applicationManager:
    enabled: true
  policyController:
    enabled: true
  searchCollector:
    enabled: false
  certPolicyController:
    enabled: true
  iamPolicyController:
    enabled: true
  version: 2.1.0
