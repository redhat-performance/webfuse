---
apiVersion: v1
kind: Namespace
metadata:
  name: {{ test_namespace }}-{{ item }}
  annotations:
    k8s.ovn.org/hybrid-overlay-external-gw: '{{ (over_self_ips['bigip1'] | selectattr("vlan", "equalto", "ocp-egress-" ~ item ~ "") | list | selectattr("type", "equalto", "float") | list)[0].address  }}'
    k8s.ovn.org/hybrid-overlay-vtep: '{{ (vxlan_tunnel_info['bigip1'] | selectattr("name", "equalto", "ocp-egress-" ~ item ~ "") | list)[0].local_address }}'

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: f5-{{ test_namespace }}-{{ item }}
  namespace: {{ test_namespace }}-{{ item }}
spec:
  replicas: 2
  selector:
    matchLabels:
      app: f5-{{ test_namespace }}-{{ item }}
  template:
    metadata:
      labels:
        app: f5-{{ test_namespace }}-{{ item }}
    spec:
      containers:
      - env:
        - name: service_name
          value: f5-{{ test_namespace }}-{{ item }}
        image: rhscl/httpd-24-rhel7:latest
        imagePullPolicy: Always
        name: f5-{{ test_namespace }}-{{ item }}
        ports:
        - containerPort: 8080
          protocol: TCP

---
apiVersion: v1
kind: Service
metadata:
  name: f5-{{ test_namespace }}-{{ item }}
  namespace: {{ test_namespace }}-{{ item }}
  labels:
    app: f5-{{ test_namespace }}-{{ item }}
    cis.f5.com/as3-tenant: {{ test_namespace }}-{{ item }}
    cis.f5.com/as3-app: f5-{{ test_namespace }}-{{ item }}
    cis.f5.com/as3-pool: web_pool
spec:
  ports:
  - name: f5-{{ test_namespace }}-{{ item }}
    port: 8080
    protocol: TCP
    targetPort: 8080
  type: NodePort
  selector:
    app: f5-{{ test_namespace }}-{{ item }}

---
kind: ConfigMap
apiVersion: v1
metadata:
  name: f5-as3-declaration
  namespace: {{ test_namespace }}-{{ item }}
  labels:
    f5type: virtual-server
    as3: "true"
data:
  template: |
    {
        "class": "AS3",
        "declaration": {
            "class": "ADC",
            "schemaVersion": "3.13.0",
            "id": "{{ test_namespace }}-{{ item }}-namespace",
            "label": "https",
            "remark": "AS3 Template",
            "{{ test_namespace }}-{{ item }}": {
                "class": "Tenant",
                "f5-{{ test_namespace }}-{{ item }}": {
                    "class": "Application",
                    "template": "generic",
                    "service_80_vs": {
                        "class": "Service_HTTP",
                        "remark": "service f5-{{ test_namespace }}-{{ item }}",
                        "virtualAddresses": [
                            "{{ test_virtual_ip[item|int-1] }}"
                        ],
                        "pool": "web_pool"
                    },
                    "web_pool": {
                        "class": "Pool",
                        "monitors": [
                            "http"
                        ],
                        "members": [
                            {
                                "servicePort": 8080,
                                "serverAddresses": []
                            }
                        ]
                    }
                }
            }
        }
    }
